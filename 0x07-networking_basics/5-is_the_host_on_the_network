#!/usr/bin/env bash
# This script pings an IP address passed as an argument five times.

# Check if an IP address argument is provided
if [ $# -ne 1 ]; then
    echo "Usage: $0 {IP_ADDRESS}"
    exit 1
fi

# Get the IP address from the argument
ip_address=$1

# Ping the IP address five times and display the results
ping -c 5 $ip_address
