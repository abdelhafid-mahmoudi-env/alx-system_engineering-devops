#!/usr/bin/env bash
# Init script to manage manage_my_process

PID_FILE="/var/run/my_process.pid"
SCRIPT="/path/to/manage_my_process"  # Adjust the path to manage_my_process

start() {
    bash "$SCRIPT" &
    echo $! > "$PID_FILE"
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PID_FILE" ]; then
        kill "$(cat "$PID_FILE")"
        rm -f "$PID_FILE"
        echo "manage_my_process stopped"
    fi
}

restart() {
    stop
    start
}

case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        ;;
esac
