#!/usr/bin/env bash

# Find the path to the Gunicorn executable
GUNICORN_BIN=$(command -v gunicorn)

# Check if Gunicorn is installed
[[ -z "$GUNICORN_BIN" ]] && { echo "Error: Gunicorn is not installed or not found in the PATH."; exit 1; }

# Gracefully reload Gunicorn by sending a HUP signal to the master process
systemctl reload gunicorn.service && echo "Gunicorn reloaded successfully." || { echo "Error: Failed to reload Gunicorn."; exit 1; }
